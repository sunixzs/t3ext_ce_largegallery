<T3DataStructure>
    <sheets>
        <sDEF>
            <ROOT>
                <TCEforms>
                    <sheetTitle>Einstellungen</sheetTitle>
                    <sheetDescription/>
                </TCEforms>
                <type>array</type>
                <el>
                    <settings.folder>
                        <TCEforms>
                            <label>Ordner mit den Bildern</label>
                            <config>
                                <type>group</type>
                                <internal_type>folder</internal_type>
                                <minitems>1</minitems>
                                <maxitems>1</maxitems>
                                <size>1</size>
                            </config>
                        </TCEforms>
                    </settings.folder>
                    <settings.imagesOnPageLoad>
                        <TCEforms>
                            <label>Anzahl der direkt sichtbaren Bilder</label>
                            <config>
                                <type>input</type>
                                <size>5</size>
                                <eval>trim,int</eval>
                                <default>20</default>
                                <range>
                                    <lower>1</lower>
                                    <upper>30</upper>
                                </range>
                                <slider>
                                    <step>1</step>
                                    <width>200</width>
                                </slider>
                            </config>
                        </TCEforms>
                    </settings.imagesOnPageLoad>
                    <settings.imagesOnAjaxLoad>
                        <TCEforms>
                            <label>Anzahl der nachgeladenen Bilder</label>
                            <config>
                                <type>input</type>
                                <size>5</size>
                                <eval>trim,int</eval>
                                <default>20</default>
                                <range>
                                    <lower>1</lower>
                                    <upper>30</upper>
                                </range>
                                <slider>
                                    <step>1</step>
                                    <width>200</width>
                                </slider>
                            </config>
                        </TCEforms>
                    </settings.imagesOnAjaxLoad>
                </el>
            </ROOT>
        </sDEF>
    </sheets>
</T3DataStructure>